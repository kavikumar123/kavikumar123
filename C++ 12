program 12:
#include <iostream.h> 
#include <conio.h> 
void swap(int &a, int &b) { 
int temp = a; 
a = b; 
b = temp; 
} 
void selectionSort(int arr[], int n) { 
int i, j, minIndex; 
for (i = 0; i< n - 1; i++) { 
minIndex = i; 
for (j = i + 1; j < n; j++) { 
if (arr[j] <arr[minIndex]) { 
minIndex = j; 
} 
} 
swap(arr[minIndex], arr[i]); 
} 
} 
void main() { 
int arr[] = {10, 7, 8, 9, 1, 5}; 
int n, i; 
n = sizeof(arr) / sizeof(arr[0]); 
cout<< "Original array: "; 
for (i = 0; i< n; i++) {
cout<<arr[i] << " "; 
} 
cout<<endl; 
selectionSort(arr, n); 
cout<< "Sorted array: "; 
for (i = 0; i< n; i++) { 
cout<<arr[i] << " "; 
} 
cout<<endl; 
getch(); 
}
